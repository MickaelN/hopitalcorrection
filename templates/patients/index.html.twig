{% extends 'base.html.twig' %}

{% block title %}Patients index
{% endblock %}

{% block body %}
	<h1>Patients index</h1>
	<a href="{{ path('patients_new') }}" class="btn btn-success">Ajouter un patient</a>
    <form class="d-flex" method="POST">
							<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
							<button class="btn btn-outline-success" type="submit">Search</button>
						</form>
	<div class="row patientsList mt-5">
		{% for patient in patients %}
			<div class="col-3 mb-3">
				<div class="card">
					<div class="card-body">
						<p class="card-title h5">{{ patient.lastname ~ ' ' ~ patient.firstname}}</p>
						<p class="card-text">{{ patient.vitalcardNumber }}</p>
						<div class="btn-group" role="group">
							<a href="{{ path('patients_show', {'id': patient.id}) }}" class="btn btn-outline-info">Afficher</a>
							<a href="{{ path('patients_edit', {'id': patient.id}) }}" class="btn btn-outline-dark">Modifier</a>
						</div>
					</div>
				</div>
			</div>
		{% else %}
			<p>Aucun patient</p>
		{% endfor %}
	</div>
{% endblock %}
